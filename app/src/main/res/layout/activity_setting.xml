<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.xiao.Schedule.SettingActivity">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="193dp"
        android:layout_height="36dp"
        android:gravity="center"
        android:text="开始时间"
        android:textAppearance="@style/TextAppearance.AppCompat.Notification.Title"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="95dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        android:layout_marginBottom="108dp"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/timePicker3"
        app:layout_constraintTop_toTopOf="@+id/choosemusic"
        app:layout_constraintVertical_bias="1.0" />

    <TimePicker
        android:id="@+id/timePicker3"
        android:layout_width="0dp"
        android:layout_height="114dp"
        android:layout_marginEnd="64dp"
        android:layout_marginStart="64dp"
        android:timePickerMode="spinner"
        android:layout_marginLeft="64dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="64dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/timePicker2"
        android:layout_marginBottom="55dp" />

    <RelativeLayout
        android:id="@+id/settingtoolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/cancelwork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="取消"
             />

        <Button
            android:id="@+id/confirmwork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:layout_marginRight="0dp"

           />

    </RelativeLayout>

    <TextView
        android:id="@+id/music"
        android:layout_width="101dp"
        android:layout_height="25dp"
        android:layout_marginBottom="13dp"
        android:layout_marginTop="17dp"
        android:text="音乐"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@+id/selectmusic"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toRightOf="@+id/selectmusic"
        app:layout_constraintRight_toRightOf="@+id/selectmusic"
        app:layout_constraintTop_toBottomOf="@+id/settingtoolbar"
        app:layout_constraintVertical_bias="0.157"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/selectmusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="多啦A梦"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="103dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp" />

    <Button
        android:id="@+id/choosemusic"
        android:layout_width="130dp"
        android:layout_height="59dp"
        android:text="自定义"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/settingtoolbar"
        android:layout_marginRight="16dp" />

    <EditText
        android:id="@+id/Remarks"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:hint="事件的备注"
        android:ems="10"
        android:inputType="textMultiLine"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView9"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="74dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="72dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/music" />

    <TextView
        android:id="@+id/endtime"
        android:layout_width="193dp"
        android:layout_height="46dp"
        android:gravity="center"
        android:text="终止时间"
        android:textAppearance="@style/TextAppearance.AppCompat.Notification.Title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="118dp"
        android:layout_marginTop="119dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/timePicker2"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/timePicker3" />

    <TimePicker
        android:id="@+id/timePicker2"
        android:layout_width="0dp"
        android:layout_height="114dp"
        android:layout_marginBottom="38dp"
        android:layout_marginEnd="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:layout_marginStart="64dp"
        android:timePickerMode="spinner"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <CheckBox
        android:id="@+id/chooseend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="7dp"
        app:layout_constraintRight_toRightOf="@+id/endtime"
        app:layout_constraintBaseline_toBaselineOf="@+id/endtime"
        tools:layout_constraintBaseline_creator="1"
        android:layout_marginRight="7dp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:entries="@array/youxianji"
        app:layout_constraintRight_toLeftOf="@+id/textView9"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/Remarks"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="0dp"
        tools:layout_editor_absoluteX="8dp" />

    <Spinner

        android:id="@+id/spinner2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/Remarks"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/chooseend" />

    <TextView
        android:id="@+id/editee"
        android:layout_width="74dp"
        android:layout_height="0dp"
        android:layout_marginEnd="97dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="9dp"
        android:text="团队："
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        app:layout_constraintLeft_toLeftOf="@+id/textView9"
        app:layout_constraintRight_toRightOf="@+id/spinner2"
        app:layout_constraintTop_toBottomOf="@+id/Remarks"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

</android.support.constraint.ConstraintLayout>
